{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "ES6",
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "lib": ["es2020"],
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}